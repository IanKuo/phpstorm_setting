<templateSet group="OAKS">
  <template name="err" value="ini_set('display_errors', '1');&#10;ini_set('error_reporting', E_ALL);" shortcut="TAB" description="error_reporting" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="user_" value="$user_info = $db-&gt;getUserInfo($_SESSION['login_guid'],'user_guid');" description="getUserInfo" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="update" value="$data=array(&#10;&#10;);&#10;$condition=array(&#10;&#10;);&#10;$db-&gt;update($table,$data,$condition);" description="update" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="table_" value="\$$field_name$_field = $this-&gt;tableField(&quot;$field_name$&quot;);" description="tableField" toReformat="false" toShortenFQNames="true">
    <variable name="field_name" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="show" value="echo &quot;&lt;pre&gt;&quot;;print_r($arr$);echo &quot;&lt;/pre&gt;&quot;;" description="print_r array pretty" toReformat="false" toShortenFQNames="true">
    <variable name="arr" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="table" value="$tb = $this-&gt;table('$table_name$',$this-&gt;company_db);" description="table" toReformat="false" toShortenFQNames="true">
    <variable name="table_name" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="debug" value="$db-&gt;db_link-&gt;debug = true;&#10;$db-&gt;db_link-&gt;debug = false;" description="debug" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="$rs" value="$rs = $this-&gt;db_link-&gt;SelectLimit($stmt,$page_limit,($page-1)*$page_limit);&#10;if($rs &amp;&amp; $rs-&gt;RecordCount() &gt; 0){&#10;    &#10;}else{&#10;    return array();&#10;}" description="rs_selectLimit" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="rs_err" value="echo $this-&gt;db_link-&gt;ErrorMsg().&quot;&lt;br/&gt;&quot;;" description="rs_error" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="$rse" value="$rs = $this-&gt;db_link-&gt;Execute($stmt);&#10;if($rs &amp;&amp; $rs-&gt;RecordCount() &gt; 0){&#10;    return $rs-&gt;getAll();&#10;}else{&#10;    return array();&#10;}" description="Execute" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="putText" value="$file_id = $file-&gt;putText($mod_dir,$text_content);" description="putText" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>